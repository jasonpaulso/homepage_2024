---
import antonLogoImage from '../../public/images/stickers/as-logo.png';
import Cards from './Cards.astro';

const footerCardData = {
  headline: 'AS',
  url: 'https://anton.schulz.studio',
  variant: 3,
  logo: antonLogoImage,
  subtitle: 'Designed with ❤️ by Anton Schulz.',
  class: 'card-sage-green',
};
---

<footer>
  <Cards cards={[footerCardData]} />
  <h2>&copy; 2024</h2>
</footer>

<style>
  footer {
    color: var(--color-primary);
    text-align: center;
    font-family: var(--font-family-primary);

    display: flex;
    flex-direction: column;
    align-items: center;
  }
  div {
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    align-self: center;
    row-gap: 8px;
    margin-bottom: 28px;
  }

  h2 {
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    align-self: flex-end;
    margin-top: var(--margin-large);
  }

  @media screen and (min-width: 640px) {
    h2 {
      margin-top: 64px;
      font-size: var(--font-size-large);
      line-height: 100%;
    }
    div {
      margin-bottom: 100px;
    }
  }

  @media screen and (min-width: 1024px) {
    h2 {
      font-size: 64px;
      margin-top: 96px;
      line-height: 100%;
    }
    div {
      margin-bottom: 120px;
      align-self: flex-start;
      > * {
        align-self: flex-start;
      }
    }
  }

  @media screen and (min-width: 1440px) {
    h2 {
      font-size: 96px;
      line-height: 100%;
      margin-top: 128px;
    }
    div {
      margin-bottom: 140px;
    }
  }
</style>

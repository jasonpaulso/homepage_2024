---
import Sticker from '../react/sticker';

const { showsAttribution } = Astro.props;
---

<footer>
  {
    showsAttribution && (
      <div>
        <p>Designed with ❤️ by</p>
        <Sticker defaultStickerImage="logo-as" className="logo what" link="https://anton.schulz.studio" client:only />
      </div>
    )
  }
  <h2>&copy; 2024</h2>
</footer>

<style>
  footer {
    color: #222;
    text-align: center;
    font-family: 'Helvetica Now Display';
    margin-top: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  div {
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    align-self: center;
    row-gap: 8px;
    margin-bottom: 28px;
    > * {
      align-self: center;
    }
  }

  h2 {
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 32px */
  }

  @media screen and (min-width: 640px) {
    footer {
      margin-top: 100px;
    }

    h2 {
      font-size: 64px;
      line-height: 100%; /* 64px */
    }
    div {
      margin-bottom: 100px;
    }
  }

  @media screen and (min-width: 1024px) {
    footer {
      margin-top: 120px;
    }

    h2 {
      font-size: 96px;
      line-height: 100%; /* 96px */
    }
    div {
      margin-bottom: 120px;
      align-self: flex-start;
      > * {
        align-self: flex-start;
      }
    }
  }

  @media screen and (min-width: 1440px) {
    footer {
      margin-top: 140px;
    }

    h2 {
      font-size: 128px;
      line-height: 100%; /* 128px */
    }
    div {
      margin-bottom: 140px;
    }
  }
</style>

---
import Card from './Card.astro';
import { db, ExperienceCard } from 'astro:db';

const cards = await db.select().from(ExperienceCard);
---

<section class="cards">
  {
    cards.map((card) => {
      return <Card {...card} key={card} />;
    })
  }
</section>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 80px;
    > div:nth-child(1) {
      transform: rotate(-4deg);
      margin-right: auto;
      margin-left: 0;
    }
    > div:nth-child(2) {
      transform: rotate(8deg);
      margin-top: 43px;
      margin-right: 0;
      margin-left: auto;
      margin-top: 80px;
      z-index: 2;
    }
    > div:nth-child(3) {
      transform: rotate(-6deg);
      margin-top: -8px;
      margin-right: auto;
      margin-left: 0;
      z-index: 1;
    }
    > div:nth-child(4) {
      transform: rotate(0deg);
      margin-top: 50px;
      margin-right: auto;
      margin-left: 80px;
      z-index: 1;
    }
  }
  @media (min-width: 640px) {
    .cards {
      margin-top: 100px;
      > div:nth-child(1) {
        margin-right: auto;
        margin-left: 0;
      }
      > div:nth-child(2) {
        margin-right: 0;
        margin-top: 100px;
      }
      > div:nth-child(3) {
        margin-top: -50px;
        margin-right: auto;
        margin-left: 80px;
      }
      > div:nth-child(4) {
        margin-top: 60px;
        margin-left: 100px;
      }
    }
  }
  @media (min-width: 1024px) {
    .cards {
      margin-top: 120px;
      > div:nth-child(1) {
        margin-right: auto;
        margin-left: 0;
      }
      > div:nth-child(2) {
        margin-right: 0;
        margin-top: -120px;
      }
      > div:nth-child(3) {
        margin-top: -100px;
        margin-right: auto;
        margin-left: 272px;
      }
      > div:nth-child(4) {
        margin-top: 80px;
        margin-left: 150px;
      }
    }
  }
  @media (min-width: 1440px) {
    .cards {
      margin-top: 140px;
      > div:nth-child(1) {
        margin-right: auto;
        margin-left: 108px;
      }
      > div:nth-child(2) {
        margin-top: -130px;
        margin-right: 100px;
      }
      > div:nth-child(3) {
        margin-top: -122px;
        margin-right: auto;
        margin-left: auto;
      }
      > div:nth-child(4) {
        margin-top: 100px;
        margin-left: 200px;
      }
    }
  }
</style>

---
import './notification.css';
---

<div class="notification-container">
  <div class="notification">
    <p>I've copied my email address to your clipboard 🤗</p>
    <div class="prompt">
      <p>Would you like to send a message now?</p>
      <div class="buttons">
        <button class="yes-btn">Yes 👍</button>
        <button class="no-btn">Nope 👎</button>
      </div>
    </div>
  </div>
</div>

<script src="./notification-script.ts"></script>

---
import Layout from '../layouts/Layout.astro';
import Header from '../components/react/header/header.tsx';
import BodyText from '../components/BodyText.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer.astro';

import eggImage from '../../public/images/stickers/egg.png';
import boomImage from '../../public/images/stickers/boom.png';
import herbImage from '../../public/images/stickers/herb.png';
import puppyImage from '../../public/images/stickers/puppy.png';
import shipImage from '../../public/images/stickers/ship.png';
import yogaImage from '../../public/images/stickers/yoga.png';
import jasonAboutImage from '../../public/images/stickers/Memoji_About.png';

export type HeadlineType = [ImageMetadata, string, string?][];
const headlines: HeadlineType = [
  [herbImage, 'Versatile software developer with a green thumb for frontend, cultivating clean code 💻 and thriving houseplants.', 'animate-skew'],
  [eggImage, 'Software engineer specializing in frontend, former restaurant cook and current home chef, 🌐 serving up innovative web experiences.', 'animate-sizzle'],
  [yogaImage, 'Frontend-focused developer, yoga enthusiast, and lifelong learner, embracing flexibility in 🚀 code and life.', 'animate-levitate'],
  [boomImage, 'Software developer by day, Fallout aficionado by night, crafting immersive 👨‍💻 frontend experiences and exploring the Wasteland.', 'animate-pulse'],
  [puppyImage, 'Frontend specialist and proud dog dad, bringing 💡 creativity and enthusiasm to every project.', 'animate-pant'],
  [shipImage, 'Former cruise line coordinator turned frontend developer, ⚓ navigating the high seas of web development.', 'animate-rotation'],
  [jasonAboutImage, 'Driven frontend-focused engineer, fusing technical prowess and creativity for 🌟 captivating web experiences.'],
];
---

<Layout title="Jason Schulz — Software Engineer">
  <Header headlines={headlines} defaultImageMetadata={jasonAboutImage} client:visible />
  <section>
    <div class="content-wrapper">
      <div><BodyText /></div>
      <div class="experience-card-column">
        <div class="experience-card-wrapper">
          <Card headline={'LinkedIn'} statement={' '} variant="3" url="https://linkedin.com/in/jasonpaulso" />
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  section {
    margin-top: 80px;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 80px;
  }

  .experience-card-wrapper {
    transform: rotate(4deg);
    margin-right: 0;
    margin-left: auto;
  }

  @media (min-width: 640px) {
    section {
      margin-top: 100px;
    }
  }

  @media (min-width: 1024px) {
    section {
      margin-top: 120px;
    }

    .content-wrapper {
      grid-template-columns: 1fr 1fr;
    }

    .experience-card-column {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: flex-end;
    }
  }

  @media (min-width: 1440px) {
    section {
      margin-top: 140px;
    }
  }
</style>

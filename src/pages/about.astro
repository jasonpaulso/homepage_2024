---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/Header.astro';
import BodyText from '../components/BodyText.astro';
import ExperienceCard from '../components/ExperienceCard.astro';
import Footer from '../components/Footer.astro';

const headlines = [
  'I build dynamic web apps and responsive UIs',
  'I have expertise in developing accessible, mobile-first applications.',
  'I collaborate with designers, engineers, and product leads to deliver best-in-class user experiences.',
  'I am skilled at solving complex technical challenges and adapting to new technologies.',
  'I have experience with React, TypeScript, Azure/Azure DevOps, Craft CMS, Figma, WordPress, and more.',
  'I am passionate about creating innovative features in fast-paced, agile  environments.',
  'I am also a husband, dog dad, and video game aficionado.',
];
---

<Layout title="Jason Schulz â€” Software Engineer">
  <PageHeader sticker="memoji-about" headlines={headlines} />
  <section>
    <div class="content-wrapper">
      <div><BodyText /></div>
      <div class="experience-card-column">
        <div class="experience-card-wrapper">
          <ExperienceCard headline={'LinkedIn'} statement={' '} variant="3" url="https://linkedin.com/in/jasonpaulso" />
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  section {
    margin-top: 80px;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 80px;
  }

  .experience-card-wrapper {
    transform: rotate(4deg);
    margin-right: 0;
    margin-left: auto;
  }

  @media (min-width: 640px) {
    section {
      margin-top: 100px;
    }
  }

  @media (min-width: 1024px) {
    section {
      margin-top: 120px;
    }

    .content-wrapper {
      grid-template-columns: 1fr 1fr;
    }

    .experience-card-column {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: flex-end;
    }
  }

  @media (min-width: 1440px) {
    section {
      margin-top: 140px;
    }
  }
</style>

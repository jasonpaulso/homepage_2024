---
import { db, eq, Headline, ExperienceCard } from 'astro:db';
import Layout from '../layouts/Layout.astro';
import Header from '../components/react/header/header';
import Footer from '../components/Footer.astro';
import Cards from '../components/Cards.astro';
import jasonHomeImage from '../../public/images/stickers/Memoji_Home.png';

const headlines = await db.select().from(Headline).where(eq(Headline.page, 'home'));
const cards = await db.select().from(ExperienceCard);
